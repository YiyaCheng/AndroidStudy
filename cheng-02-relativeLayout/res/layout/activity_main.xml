<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <ImageView 
            android:id="@+id/img1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/qq"/>
        <ImageView
            android:id="@+id/img2" 
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/qqhead"
            android:layout_below="@id/img1"
            />
        <TextView 
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/img2"
            android:layout_alignTop="@id/img2"
            />
        <EditText 
            android:id="@+id/et_num"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv1"
            android:layout_alignTop="@id/tv1"
            android:layout_alignBottom="@id/tv1"/>
        <TextView 
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textSize="20sp"
            android:layout_toRightOf="@id/img2"
            android:layout_below="@id/tv1"
            
            />
        <EditText 
            android:id="@+id/et_psw"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv2"
            android:layout_alignTop="@id/tv2"
            android:layout_alignBottom="@id/tv2"
            />
        <CheckBox 
            android:id="@+id/rg1"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/img2"
            android:layout_below="@id/img2"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="记住密码"
            android:textSize="20sp"
            />
        <CheckBox 
            android:id="@+id/rg2"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rg1"
            android:layout_alignTop="@id/rg1"
            android:layout_alignBottom="@id/rg1"
            android:text="自动登录"
            android:textSize="20sp"/>
        <CheckBox 
            android:id="@+id/rg3"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"
            android:layout_below="@id/rg1"
            android:layout_alignLeft="@id/rg1"
            android:text="隐身登录"
            android:textSize="20sp"/>
        <CheckBox 
            android:id="@+id/rg4"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rg3"
            android:layout_alignTop="@id/rg3"
            android:layout_alignLeft="@id/rg2"
            android:text="静音登录"
            android:textSize="20sp"/>
        
    </RelativeLayout>

</RelativeLayout>
